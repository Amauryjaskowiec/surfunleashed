<div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <h1>Post a New Board</h1>
        <%= simple_form_for board do |f| %>
         <%= f.error_notification %>
         <%= f.input :name  %>
         <%= f.association :category %>
         <%= f.input :size, collection: 5..9  %>
         <%= f.input :price_per_day %>
         <%= f.input :description %>
         <%= f.input :address %>

         <%= f.input :automatic_reservation %>
         
         <%= f.button :submit %>
        <% end %>
      </div>
    </div>
</div>
